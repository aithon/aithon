<!-- $Id$
-->

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="aithon.choose-file">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="aithon.save-file">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="aithon.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>

	<ACTION NAME="aithon.detect">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).detectAithonBoard();
		</CODE>
	</ACTION>

	<ACTION NAME="aithon.compile">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).compileCode();
		</CODE>
	</ACTION>

	<ACTION NAME="aithon.rebuild">
		<CODE>
			wm.addDockableWindow(AithonPlugin.NAME);
			wm.getDockableWindow(AithonPlugin.NAME).rebuildCode();
		</CODE>
	</ACTION>
</ACTIONS>

